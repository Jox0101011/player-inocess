player_install() {
   sudo pacman -S npm
   sudo npm -g live-server
  }

player_web() {
  live-server web/
  echo "[+] ON"
  }

player_cli() {
  ./player-sh
  }

player() {
  case "$1" in

  cli) player_cli ;;
  web) player_web ;;
  install) player_install ;;
  *) echo "\e[31m[!] Usage: player [cli|web|install]\e[0m" ;;

  esac
  }
